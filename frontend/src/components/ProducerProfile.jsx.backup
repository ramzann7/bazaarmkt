  UserIcon, 
  MapPinIcon, 
  BellIcon, 
  CreditCardIcon, 
  CogIcon, 
  ShieldCheckIcon,
  CameraIcon,
  PlusIcon,
  TrashIcon,
  ShoppingBagIcon,
  CubeIcon,
  ClockIcon,
  TruckIcon,
  ChartBarIcon,
  PhotoIcon,
