{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build:prod",
        "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "frontend/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "redirects": [
    {
      "source": "https://bazaarmkt.ca/(.*)",
      "destination": "https://www.bazaarmkt.ca/$1",
      "permanent": true
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://www.bazaarmkt.ca/api",
    "VITE_BASE_URL": "https://www.bazaarmkt.ca",
    "VITE_UPLOADS_URL": "https://www.bazaarmkt.ca/uploads",
    "VITE_NODE_ENV": "production",
    "MONGODB_URI": "mongodb+srv://bazaar:v2SpCIZRLgEpwvhW@cluster0.c8vyia3.mongodb.net/bazaarmkt-prod?retryWrites=true&w=majority&appName=Cluster0",
    "CORS_ORIGIN": "https://www.bazaarmkt.ca",
    "JWT_SECRET": "your-super-secure-jwt-secret-key-here-minimum-32-characters",
    "JWT_EXPIRES_IN": "7d",
    "JWT_REFRESH_SECRET": "your-super-secure-refresh-secret-key-here",
    "JWT_REFRESH_EXPIRES_IN": "30d",
    "BREVO_API_KEY": "xkeys-your-brevo-api-key-here"
  }
}