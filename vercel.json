{
  "version": 2,
  "buildCommand": "cd frontend && npm run build && cd ../api && npm install",
  "installCommand": "cd frontend && npm install && cd ../api && npm install",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "backend/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
