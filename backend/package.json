{
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "vercel-build": "echo 'Vercel build completed'",
    "test": "jest --testPathPattern=tests --setupFilesAfterEnv=./tests/setup.js",
    "test:watch": "jest --watch --testPathPattern=tests --setupFilesAfterEnv=./tests/setup.js",
    "test:coverage": "jest --coverage --testPathPattern=tests --setupFilesAfterEnv=./tests/setup.js",
    "test:ci": "jest --ci --coverage --testPathPattern=tests --setupFilesAfterEnv=./tests/setup.js --watchAll=false",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "@vercel/blob": "^2.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "mongoose": "^8.17.1",
    "multer": "^2.0.2",
    "openai": "^5.12.2",
    "rate-limit-redis": "^4.2.0",
    "socket.io": "^4.8.1",
    "stripe": "^18.5.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
